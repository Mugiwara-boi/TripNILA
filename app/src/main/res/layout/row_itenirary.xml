<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTime"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7:00 AM"
            android:gravity="center"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvRoute"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7:00 AM"
            android:gravity="center"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDayOfWeek"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:id="@+id/tvBusiness"
                            android:singleLine="false"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Sample Staycation Hotel"
                            android:textColor="#F67E24"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_margin="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:background="@drawable/layout_bg"
                            android:backgroundTint="#F67E24"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvCategory"
                                android:textSize="11dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="History"
                                android:textColor="@color/white" />


                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:id="@+id/imgExpand"
                                android:src="@drawable/icn_expand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="500 meters"
                            android:gravity="center"
                            android:textColor="@color/text_color_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="•"
                            android:gravity="center"
                            android:textColor="@color/text_color_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="₱"
                            android:gravity="center"
                            android:textColor="@color/text_color_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="@color/text_color_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="•"
                            android:gravity="center"
                            android:textColor="@color/text_color_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvOpen"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="500 meters"
                            android:gravity="center"
                            android:textColor="@color/text_color_gray"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lnReturn"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/layout_bg"
                            android:backgroundTint="#F67E24"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_margin="1dp"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:background="@drawable/layout_bg"
                                android:backgroundTint="#FFFFFF"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvReturn"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:text="Return to Staycation"
                                    android:textColor="#F67E24" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:id="@+id/lnStepsHolder"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:visibility="gone"
                            android:id="@+id/rvSteps"
                            tools:listitem="@layout/row_steps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnRoute"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <androidx.cardview.widget.CardView
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            android:elevation="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnRouteReturn"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/lnStepsHolderReturn"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:visibility="gone"
                                android:id="@+id/rvStepsReturn"
                                tools:listitem="@layout/row_steps"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            android:elevation="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/mapReturn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:id="@+id/loader"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnCheckDirections"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/layout_bg"
                            android:backgroundTint="#F67E24"
                            android:gravity="center">

                            <!--  Check and Hide Directions Togabble -->

                            <TextView
                                android:id="@+id/tvDirectionButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="Check Directions"
                                android:textColor="@color/white" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnSeeRoute"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_width="match_parent"
                            android:background="@drawable/layout_bg"
                            android:backgroundTint="#F67E24"
                            android:gravity="center">

                            <!-- See Route tpos npapalitan ng Return to staycation -->

                            <LinearLayout
                                android:layout_margin="1dp"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:background="@drawable/layout_bg"
                                android:backgroundTint="#FFFFFF"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvDirectionButton2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:text="See Route"
                                    android:textColor="#F67E24" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>